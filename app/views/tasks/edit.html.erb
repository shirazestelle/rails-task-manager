<div class="container">
  <div class="row">
   <div class="col-md-6 col-md-offset-3">
    <h1>Edit Task</h1>
    <%= form_for(@task) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class:"form-control"%>

      <%= f.label :details %>
      <%= f.text_field :details, class:"form-control"%>


      <%= f.check_box :completed, checked: @task.completed%>
      <%= f.label :completed %>

      <div>
        <%= f.submit class:"btn btn-info"%>
      </div>
    <% end %>
   </div>
  </div>
</div>
