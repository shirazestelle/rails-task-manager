<div class="container">
  <div class="row">
   <div class="col-md-6 col-md-offset-4">
    <h1><%= @task.title %></h1>
    <div class="details">
      <p><%= @task.details %></p>
    </div>
    <p>
       <% if @task.completed %>
         <i class="fas fa-check-square"></i> This task is completed
       <% else %>
         <i class="far fa-square"></i> This task is not completed yet
       <% end %>
    </p>
    <%= link_to "Edit task", edit_task_path, class:"btn btn-info"  %>
    <%= link_to "Return", tasks_path, class:"btn btn-info"%>
   </div>
  </div>
</div>


