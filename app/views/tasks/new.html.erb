<div class="container">
  <div class="row">
   <div class="col-md-6 col-md-offset-3">
    <h1>New Task</h1>
    <%= form_for(@new_task) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class:"form-control"%>

      <%= f.label :details %>
      <%= f.text_field :details, class:"form-control"%>

      <%= f.submit class:"btn btn-info"%>
    <% end %>
    </form>
   </div>
  </div>
</div>
